 {{!-- Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}

{{!-- 
Create a button in `index.handlebars` that will submit the user input into the database. --}}


<div class="container">
    <div class="jumbotron">
        <h1 class="fontz">Order Burgers. Eat Burgers</h1>
        <panel>
            <form class="create-form">
                <div class="form-group">
                <label for="newburger">Order a Hot, Tasty Burger</label>
                <input type="text" id="newburger" name = "burger">
                    <button type="submit" class="btn btn-success" id="addburger">
                    <span class="fa fa-thumbs-up">Devour</span>
                    </button>
                </div>
            </form>
        </panel>
    </div>

<div class = "row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class ="panel-heading" id="leftside"><strong class="fontz">Devour Burger</strong></div>
            <div class="panel-body"></div>

            <ul>
                {{#each burgers}}
                 {{#unless devoured}}
                <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
                <button type="button"  class ="devour-burger" id="eatbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span class="fa fa-usd"></span> Devour Burger </button>
                <hr>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class = "row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class ="panel-heading" id="leftside"><strong class="fontz">Devoured Burgers</strong></div>
            <div class="panel-body"></div>
         <ul>
                {{#each burgers}}
                 {{#if devoured}}
                <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
                <button type="button" class ="trashburger btn btn-warning" id="trashbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span class="fa fa-usd"></span> Devoured </button>
                <hr>
                {{/if}}
                {{/each}}
            </ul>